<UserControl x:Class="Grabacr07.KanColleViewer.Views.Settings"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
			 xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:livet="http://schemas.livet-mvvm.net/2011/wpf"
			 xmlns:views="clr-namespace:Grabacr07.KanColleViewer.Views"
			 xmlns:viewModels="clr-namespace:Grabacr07.KanColleViewer.ViewModels"
			 xmlns:controls="clr-namespace:Grabacr07.Desktop.Metro.Controls;assembly=Desktop.Metro"
			 mc:Ignorable="d"
			 d:DesignWidth="700"
			 d:DesignHeight="300">
	<UserControl.DataContext>
		<viewModels:SettingsViewModel />
	</UserControl.DataContext>

	<StackPanel Margin="10,0">
		<StackPanel>
			<TextBlock>
				<Run Text="ブラウザー操作"
					 Style="{DynamicResource PickupTextElementStyleKey}" />
			</TextBlock>

			<Border ClipToBounds="True">
				<views:BrowserNavigator Margin="10,6,10,-2" />
			</Border>
		</StackPanel>

		<Rectangle Height="1"
				   Style="{DynamicResource SeparatorRectangleStyleKey}" />
	
		<StackPanel Margin="0,12">
			<TextBlock>
				<Run Text="スクリーンショット設定"
					 Style="{DynamicResource PickupTextElementStyleKey}" />
			</TextBlock>
			<Grid Margin="10,6,10,0">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<TextBlock Text="保存先フォルダー  "
						   VerticalAlignment="Center"
						   Margin="0,6" />
				<controls:PromptTextBox Grid.Row="0"
										Grid.Column="1"
										Text="{Binding ScreenshotFolder}"
										Prompt="保存先フォルダー パス"
										Padding="2" />
				<!--<TextBlock Grid.Row="1"
					   Text="ファイル名: "
					   VerticalAlignment="Center"
					   Margin="0,6" />
			<controls:PromptTextBox Grid.Row="1"
									Grid.Column="1"
									Text="{Binding ScreenshotFilename}"
									Prompt="ファイル名"
									Margin="5,3"
									Padding="2" />-->
			</Grid>
		</StackPanel>
		<Rectangle Height="1"
				   Style="{DynamicResource SeparatorRectangleStyleKey}" />
		<StackPanel>
			<TextBlock>
				<Run Text="プロキシサーバー" Style="{DynamicResource PickupTextElementStyleKey}"/>
			</TextBlock>
			<Grid Margin="10,6,10,0">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" MinWidth="52"/>
					<ColumnDefinition/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Row="0" Margin="0,6" Text="アドレス" VerticalAlignment="Center"/>
				<controls:PromptTextBox Grid.Column="1" Grid.Row="0" Padding="2" TextWrapping="Wrap" Prompt="アドレス" Text="{Binding ProxyHost}"/>
				<TextBlock Grid.Row="1" Margin="0,6" Text="ポート" VerticalAlignment="Center"/>
				<controls:PromptTextBox Grid.Column="1" Grid.Row="1" Padding="2" TextWrapping="Wrap" Prompt="ポート番号" Text="{Binding ProxyPort}"/>
			</Grid>
		</StackPanel>
	</StackPanel>
</UserControl>