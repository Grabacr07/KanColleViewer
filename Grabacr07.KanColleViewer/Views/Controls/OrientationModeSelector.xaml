							<Setter Property="Content" >
								<Setter.Value>
									<Viewbox Width="25" Height="25">
										<Grid>
											<Polygon Fill="#FFF" Points="7882,5501 7882,4363 6715,4527 6715,5501" />
											<Polygon Fill="#FFF" Points="8115,5501 9749,5501 9749,4101 8115,4330" />
