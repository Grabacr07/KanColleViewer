											<Setter TargetName="ShipName"
													Property="Text"
													Value="" />
										</DataTrigger>
										<DataTrigger Binding="{Binding State}"
													 Value="Unlocked">
											<Setter TargetName="Remaining"
													Property="Text"
													Value="{Binding Resources.Dockyard_Unused, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
