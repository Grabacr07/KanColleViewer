<UserControl x:Class="Grabacr07.KanColleViewer.Views.Settings.Network"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:livet="http://schemas.livet-mvvm.net/2011/wpf"
			 xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
			 xmlns:metro2="http://schemes.grabacr.net/winfx/2015/personal/controls"
			 xmlns:models="clr-namespace:Grabacr07.KanColleViewer.Models"
			 xmlns:ms="clr-namespace:Grabacr07.KanColleViewer.Models.Settings"
			 xmlns:vms="clr-namespace:Grabacr07.KanColleViewer.ViewModels.Settings"
			 mc:Ignorable="d"
			 d:DesignWidth="500"
			 d:DesignHeight="640"
			 d:DataContext="{d:DesignInstance vms:NetworkSettingsViewModel}">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Common.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<StackPanel>
		<TextBlock Text="{Binding Resources.Settings_Proxy, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
				   Style="{DynamicResource SettingsHeaderTextStyleKey}" />

		<StackPanel Margin="20,0,0,0">
			<RadioButton x:Name="CheckDirectAccess"
						 GroupName="ProxySettings"
						 Content="{Binding Resources.Settings_Proxy_DirectAccess, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
						 IsChecked="{Binding ProxyType, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=DirectAccess}" />

			<TextBlock Style="{DynamicResource DetailTextStyleKey}"
					   IsEnabled="{Binding ProxyType, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=DirectAccess}"
					   Margin="20,2,0,0">
				<Run Text="{Binding Resources.Settings_Proxy_DirectAccess_Description, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
			</TextBlock>

			<Border Height="8" />
			<RadioButton x:Name="CheckUseSystemProxy"
						 GroupName="ProxySettings"
						 Content="{Binding Resources.Settings_Proxy_SystemProxy, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
						 IsChecked="{Binding ProxyType, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=SystemProxy}" />

			<TextBlock Style="{DynamicResource DetailTextStyleKey}"
					   IsEnabled="{Binding ProxyType, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=SystemProxy}"
					   Margin="20,2,0,0">
				<Run Text="{Binding Resources.Settings_Proxy_SystemProxy_Description, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
			</TextBlock>

			<Border Height="8" />
			<RadioButton x:Name="CheckUseSpecificProxy"
						 GroupName="ProxySettings"
						 Content="{Binding Resources.Settings_Proxy_SpecificProxy, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
						 IsChecked="{Binding ProxyType, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=SpecificProxy}" />

			<StackPanel IsEnabled="{Binding ProxyType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=SpecificProxy}"
						Margin="20,0,0,0"
						Grid.IsSharedSizeScope="True">
				<StackPanel.Resources>
					<Style TargetType="{x:Type metro:PromptTextBox}">
						<Setter Property="Margin"
								Value="0,3" />
					</Style>
				</StackPanel.Resources>

				<TextBlock Style="{DynamicResource DetailTextStyleKey}"
						   Margin="0,2">
					<Run Text="{Binding Resources.Settings_Proxy_SpecificProxy_Description1, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
					<LineBreak />
					<Run Text="{Binding Resources.Settings_Proxy_SpecificProxy_Description2, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
				</TextBlock>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"
										  SharedSizeGroup="Col0" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="15"
										  SharedSizeGroup="Col2" />
						<ColumnDefinition Width="Auto"
										  SharedSizeGroup="Col3" />
						<ColumnDefinition Width="60"
										  SharedSizeGroup="Col4" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<TextBlock Grid.Row="0"
							   Grid.Column="0"
							   TextAlignment="Right">
						<Run Text="HTTP" />
						<Run Text=": " />
					</TextBlock>
					<metro:PromptTextBox Grid.Row="0"
										 Grid.Column="1"
										 Text="{Binding SpecificHttpProxyHost, Mode=TwoWay}"
										 Prompt="{Binding Resources.Settings_Proxy_Host, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
					<TextBlock Grid.Row="0"
							   Grid.Column="3">
						<Run Text="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
						<Run Text=": " />
					</TextBlock>
					<metro:PromptTextBox Grid.Row="0"
										 Grid.Column="4"
										 Prompt="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
										 MaxLength="5">
						<metro:PromptTextBox.Text>
							<Binding Path="SpecificHttpProxyPort"
									 UpdateSourceTrigger="PropertyChanged">
								<Binding.ValidationRules>
									<metro:Int32Rule Min="1"
													 Max="65535"
													 AllowsEmpty="True" />
								</Binding.ValidationRules>
							</Binding>
						</metro:PromptTextBox.Text>
					</metro:PromptTextBox>

					<CheckBox Grid.Row="1"
							  Grid.Column="1"
							  Grid.ColumnSpan="3"
							  Content="{Binding Resources.Settings_Proxy_SpecificProxy_ForAllProtocols, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
							  Margin="-1,4"
							  IsChecked="{Binding IsUseHttpProxyForAllProtocols, Mode=TwoWay}" />
				</Grid>

				<Grid IsEnabled="{Binding IsUseHttpProxyForAllProtocols, Converter={StaticResource ReverseBooleanConverter}}">
					<Grid.ColumnDefinitions>
						<ColumnDefinition SharedSizeGroup="Col0" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition SharedSizeGroup="Col2" />
						<ColumnDefinition SharedSizeGroup="Col3" />
						<ColumnDefinition SharedSizeGroup="Col4" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<TextBlock Grid.Row="0"
							   Grid.Column="0"
							   TextAlignment="Right">
						<Run Text="HTTPS" />
						<Run Text=": " />
					</TextBlock>
					<metro:PromptTextBox Grid.Row="0"
										 Grid.Column="1"
										 Text="{Binding SpecificHttpsProxyHost, Mode=TwoWay}"
										 Prompt="{Binding Resources.Settings_Proxy_Host, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
					<TextBlock Grid.Row="0"
							   Grid.Column="3">
						<Run Text="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
						<Run Text=": " />
					</TextBlock>
					<metro:PromptTextBox Grid.Row="0"
										 Grid.Column="4"
										 Prompt="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
										 MaxLength="5">
						<metro:PromptTextBox.Text>
							<Binding Path="SpecificHttpsProxyPort"
									 UpdateSourceTrigger="PropertyChanged">
								<Binding.ValidationRules>
									<metro:Int32Rule Min="1"
													 Max="65535"
													 AllowsEmpty="True" />
								</Binding.ValidationRules>
							</Binding>
						</metro:PromptTextBox.Text>
					</metro:PromptTextBox>

					<TextBlock Grid.Row="1"
							   Grid.Column="0"
							   TextAlignment="Right">
						<Run Text="FTP" />
						<Run Text=": " />
					</TextBlock>
					<metro:PromptTextBox Grid.Row="1"
										 Grid.Column="1"
										 Text="{Binding SpecificFtpProxyHost, Mode=TwoWay}"
										 Prompt="{Binding Resources.Settings_Proxy_Host, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
					<TextBlock Grid.Row="1"
							   Grid.Column="3">
						<Run Text="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
						<Run Text=": " />
					</TextBlock>
					<metro:PromptTextBox Grid.Row="1"
										 Grid.Column="4"
										 Prompt="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
										 MaxLength="5">
						<metro:PromptTextBox.Text>
							<Binding Path="SpecificFtpProxyPort"
									 UpdateSourceTrigger="PropertyChanged">
								<Binding.ValidationRules>
									<metro:Int32Rule Min="1"
													 Max="65535"
													 AllowsEmpty="True" />
								</Binding.ValidationRules>
							</Binding>
						</metro:PromptTextBox.Text>
					</metro:PromptTextBox>

					<TextBlock Grid.Row="2"
							   Grid.Column="0"
							   TextAlignment="Right">
						<Run Text="SOCKS" />
						<Run Text=": " />
					</TextBlock>
					<metro:PromptTextBox Grid.Row="2"
										 Grid.Column="1"
										 Text="{Binding SpecificSocksProxyHost, Mode=TwoWay}"
										 Prompt="{Binding Resources.Settings_Proxy_Host, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
					<TextBlock Grid.Row="2"
							   Grid.Column="3">
						<Run Text="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
						<Run Text=": " />
					</TextBlock>
					<metro:PromptTextBox Grid.Row="2"
										 Grid.Column="4"
										 Prompt="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
										 MaxLength="5">
						<metro:PromptTextBox.Text>
							<Binding Path="SpecificSocksProxyPort"
									 UpdateSourceTrigger="PropertyChanged">
								<Binding.ValidationRules>
									<metro:Int32Rule Min="1"
													 Max="65535"
													 AllowsEmpty="True" />
								</Binding.ValidationRules>
							</Binding>
						</metro:PromptTextBox.Text>
					</metro:PromptTextBox>
				</Grid>
			</StackPanel>

			<Border Height="8" />
			<StackPanel Orientation="Horizontal"
						HorizontalAlignment="Right">
				<TextBlock Text="{Binding Resources.Settings_Proxy_Restart2Apply, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
						   Style="{DynamicResource DetailTextStyleKey}"
						   Margin="16,8" />

				<metro2:CallMethodButton MethodTarget="{Binding}"
										 MethodName="Apply"
										 Content="保存"
										 MinWidth="110"
										 Padding="16,6" />
				<Border Width="8" />
				<metro2:CallMethodButton MethodTarget="{Binding}"
										 MethodName="Cancel"
										 Content="{Binding Resources.Button_Cancel, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
										 MinWidth="110"
										 Padding="16,6" />
			</StackPanel>
		</StackPanel>

		<Rectangle Style="{DynamicResource SeparatorStyleKey}" />

		<TextBlock Text="{Binding Resources.Settings_LocalListeningPort, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
				   Style="{DynamicResource SettingsHeaderTextStyleKey}" />

		<StackPanel Margin="20,0,0,0">
			<TextBlock Text="{Binding Resources.Settings_Proxy_Restart2Apply, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
					   Style="{DynamicResource DetailTextStyleKey}" />

			<Border Height="8" />
			<CheckBox Content="{Binding Resources.Settings_LocalProxy_CheckBox, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
					  IsChecked="{Binding Source={x:Static ms:NetworkSettings+LocalProxy.IsEnabled}, Path=Value}" />

			<Border Height="4" />
			<StackPanel IsEnabled="{Binding Source={x:Static ms:NetworkSettings+LocalProxy.IsEnabled}, Path=Value}"
						Margin="20,0,0,0">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<TextBlock Grid.Column="0">
						<Run Text="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}" />
						<Run Text=": " />
					</TextBlock>
					<metro:PromptTextBox Grid.Column="1"
										 Prompt="{Binding Resources.Settings_Proxy_Port, Source={x:Static models:ResourceService.Current}, Mode=OneWay}"
										 Width="80">
						<metro:PromptTextBox.Text>
							<Binding Source="{x:Static ms:NetworkSettings+LocalProxy.Port}"
									 Path="Value"
									 UpdateSourceTrigger="PropertyChanged">
								<Binding.ValidationRules>
									<metro:Int32Rule Min="1"
													 Max="65535" />
								</Binding.ValidationRules>
							</Binding>
						</metro:PromptTextBox.Text>
					</metro:PromptTextBox>

					<TextBlock Grid.Column="2"
							   Style="{DynamicResource DetailTextStyleKey}"
							   Margin="5">
						<Run Text="{Binding Resources.Common_DefaultValue, Source={x:Static models:ResourceService.Current}, Mode=OneWay, StringFormat='({0}:'}" />
						<Run Text="{Binding Source={x:Static ms:NetworkSettings+LocalProxy.Port}, Path=Default, Mode=OneWay}" />
						<Run Text=")" />
					</TextBlock>
				</Grid>
			</StackPanel>
		</StackPanel>

		<Rectangle Style="{DynamicResource SeparatorStyleKey}" />

	</StackPanel>
</UserControl>
